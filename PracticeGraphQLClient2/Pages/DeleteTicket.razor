@page "/DeleteTicket/{id:int}"
@using PracticeGraphQLClient2.DataAccess
@using PracticeGraphQLClient2.DataAccess.Model
@inject NavigationManager NavigationManager

<h3>🗑️ Удаление билета</h3>

@if (ticket == null)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Внимание!</h4>
        <p>Вы уверены, что хотите удалить билет №@ticket.TicketId?</p>
        <hr>
        <p>
            <strong>Цена:</strong> @ticket.Price.ToString("C")<br />
            <strong>Дата:</strong> @ticket.DataProdaji.ToShortDateString()<br />
            <strong>Продавец:</strong> @ticket.SellerName<br />
            <strong>Статус:</strong> @(ticket.IsSold ? "Продан" : "Не продан")
        </p>
    </div>

    <button class="btn btn-danger" @onclick="ConfirmDelete">🗑️ Да, удалить</button>
    <button class="btn btn-secondary" @onclick="Cancel">❌ Отмена</button>
}

@code {
    [Parameter] public int Id { get; set; }
    private Ticket? ticket;

    protected override async Task OnInitializedAsync()
    {
        await LoadTicket();
    }

    private async Task LoadTicket()
    {
        try
        {
            ticket = await Query.GetTicketById(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки билета: {ex.Message}");
        }
    }

    private async Task ConfirmDelete()
    {
        try
        {
            await Mutation.DeleteTicket(Id);
            NavigationManager.NavigateTo("/TicketView");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при удалении: {ex.Message}");
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/TicketView");
    }
}