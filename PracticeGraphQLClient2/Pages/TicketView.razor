@page "/TicketView"
@using PracticeGraphQLClient2.DataAccess
@using PracticeGraphQLClient2.DataAccess.Model
@inject NavigationManager NavigationManager

<h3 class="mb-3">🎫 Список билетов</h3>

@if (isLoading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
}
else if (!tickets.Any())
{
    <div class="alert alert-info">
        Билеты не найдены. <a href="/CreateTicket">Создать первый билет</a>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Цена</th>
                <th>Статус</th>
                <th>Дата продажи</th>
                <th>Продавец</th>
                <th>Поезд</th>
                <th>Пассажир</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in tickets)
            {
                <tr>
                    <td>@ticket.TicketId</td>
                    <td>@ticket.Price.ToString("C")</td>
                    <td>
                        @if (ticket.IsSold)
                        {
                            <span class="badge bg-success">Продан</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">В наличии</span>
                        }
                    </td>
                    <td>@ticket.DataProdaji.ToShortDateString()</td>
                    <td>@ticket.SellerName</td>
                    <td>@(ticket.Train?.TrainName ?? $"ID: {ticket.TrainId}")</td>
                    <td>
                        @if (ticket.Passenger != null)
                        {
                            <span>@ticket.Passenger.FirstName @ticket.Passenger.LastName</span>
                        }
                        else
                        {
                            <span class="text-muted">Не указан</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => EditTicket(ticket.TicketId)">
                            ✏️
                        </button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteTicket(ticket.TicketId)">
                            🗑️
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="btn btn-success" @onclick="CreateTicket">
    ➕ Купить билет
</button>

@code {
    private List<Ticket> tickets = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadTickets();
    }

    private async Task LoadTickets()
    {
        try
        {
            isLoading = true;
            tickets = await Query.GetAllTickets();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки билетов: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateTicket()
    {
        NavigationManager.NavigateTo("/CreateTicket");
    }

    private void EditTicket(int id)
    {
        NavigationManager.NavigateTo($"/EditTicket/{id}");
    }

    private void DeleteTicket(int id)
    {
        NavigationManager.NavigateTo($"/DeleteTicket/{id}");
    }
}