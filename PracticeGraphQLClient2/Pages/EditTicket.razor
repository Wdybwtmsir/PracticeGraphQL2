@page "/EditTicket/{id:int}"
@using PracticeGraphQLClient2.DataAccess
@using PracticeGraphQLClient2.DataAccess.Model
@inject NavigationManager NavigationManager

<h3>✏️ Редактирование билета #@Id</h3>

@if (ticket == null)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Загрузка...</span>
        </div>
    </div>
}
else
{
    <EditForm Model="@ticket" OnValidSubmit="@HandleValidSubmit">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Цена:</label>
                    <InputNumber class="form-control" @bind-Value="ticket.Price" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Статус:</label>
                    <div class="form-check">
                        <InputCheckbox class="form-check-input" @bind-Value="ticket.IsSold" />
                        <label class="form-check-label">Билет продан</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Дата продажи:</label>
                    <InputDate class="form-control" @bind-Value="ticket.DataProdaji" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Продавец:</label>
                    <InputText class="form-control" @bind-Value="ticket.SellerName" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">ID поезда:</label>
                    <InputNumber class="form-control" @bind-Value="ticket.TrainId" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">ID пассажира:</label>
                    <InputNumber class="form-control" @bind-Value="ticket.PassengerId" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">💾 Сохранить</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancel">❌ Отмена</button>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }
    private Ticket? ticket;

    protected override async Task OnInitializedAsync()
    {
        await LoadTicket();
    }

    private async Task LoadTicket()
    {
        try
        {
            ticket = await Query.GetTicketById(Id);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки билета: {ex.Message}");
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            await Mutation.EditTicketWithId(
                Id,
                ticket!.Price,
                ticket.IsSold,
                ticket.DataProdaji,
                ticket.SellerName,
                ticket.TrainId,
                ticket.PassengerId ?? 0
            );
            NavigationManager.NavigateTo("/TicketView");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при сохранении: {ex.Message}");
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/TicketView");
    }
}